@model MyApp.Models.Cart
<h1>Cart Details</h1>
<form method="post">
    <div class="row">
        <div class="col-6">
            <img src="@Model.Product.ImageUrl" class="img-fluid" alt="Product Image">
        </div>
        <div class="col-6">
            <h2>@Model.Product.Name</h2>
            <h2>@Model.Product.Description</h2>
            <p>Technology : @Model.Product.category.Name</p>
            <p>Price: @Model.Product.Price.ToString("0.00")</p>
            <p>Quantity: @Model.Count</p>
            <div class="form-control">
                <label asp-for="Count"></label>
                <input asp-for="Count" class="form-control" />
            </div>

            <p>Total: @(Model.Product.Price * Model.Count).ToString("0.00")</p>
            
            <div class="form-control">
                <a class="btn btn-primary" asp-action="Index" asp-controller="Home"><i class="bi bi-arrow-left-circle"></i> Back to List</a>
                <button type="submit" class="btn btn-dark">Add To Cart</button>
            </div>
        </div>
    </div>
</form>